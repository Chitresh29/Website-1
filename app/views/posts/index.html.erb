<div id="post">

	<h1>List Posts</h1>
	<hr>
	<% if admin_signed_in? %>
		<div class="special-buttons">
			<%= link_to "New", new_post_path%>
		</div>
	<% end %>
	<% @post.each do |post| %>
		<h3><%= post.title %></h3>
		<p><%= post.content %></p>
		<br>
		<% if admin_signed_in? %>
			<%= link_to "Edit", edit_post_path(post)%>
			<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}  %>
		<% end %>
	<% end %>
	<br>
</div>