<h1> Contact Form </h1>
<div class="narrow-wrapper">
	<%= form_for @contact do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<%= f.label :message %>
	<%= f.text_area :message %>
	<%= f.text_field :nickname, :class => 'hidden' %>
	<%= f.submit %>
	<% end %>
</div>